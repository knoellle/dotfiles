(defalias
  nav (layer-toggle navigation)
  mcr (layer-next macros)

  vnv (cmd-button "vedit")
  join #(/ j o i n space s o u l x x 3)
  inv #(/ i n v i t e space s o u l x x 3)
  wfm #(M y space p l e a s u r e , space p l e a s e space d o space l e a v e space a space r e v i e w space o n space w a r f r a m e . m a r k e t / p r o f i l e / M y s t e r y 0 u s , space t h a n k space y o u !
)

  vw C-right
  vb C-left
  v0 home
  v^ #(home C-right C-left :delay 10)
  v$ end
)
