  _      _      @wfm   _      _      _      _      _      @inv   _      _      _      _      _
  _      _      _      _      _      _      _      @join  _      _      _      _      _
  _      _      _      _      _      _      _      _      _      _      _      _
  _      _      _                    _                    _      _
)

(deflayer _
  _      _      _      _      _      _      _      _      _      _      _      _      _      _
